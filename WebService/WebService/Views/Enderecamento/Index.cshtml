@model IEnumerable<WebService.Models.Enderecamento>

@{

    Layout = "~/Views/Shared/_mainView.cshtml";
}

<!DOCTYPE html>

<html>
<body>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <div class="form-horizontal">
                            <h4 class="box-title">Lista de Endereços</h4>
                            <h3>
                                @Html.ActionLink("Adicionar novo", "Create", "Endereco", new { @class = "btn btn-success" })
                            </h3>
                            <div class="box-body">
                                <table id="TabelaUsuarios" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            @*<th>
                                                @Html.DisplayNameFor(model => model.id_enderecamento)
                                            </th>*@
                                           
                                            <th>
                                                @Html.DisplayNameFor(model => model.produto.descricao)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.endereco.descricao)
                                            </th>                                     
                                            <th></th>
                                        </tr>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @*<td>@Html.DisplayFor(modelItem => item.id_enderecamento)</td>*@
                                                <td>@Html.DisplayFor(modelItem => item.produto.descricao)</td>
                                                <td>@Html.DisplayFor(modelItem => item.endereco.descricao)</td>                                              
                                                <td>
                                                    @Html.ActionLink("Excluir", "Delete", new { id = item.id_enderecamento }, new { @class = "btn btn-danger" })
                                                </td>
                                            </tr>
                                        }
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
