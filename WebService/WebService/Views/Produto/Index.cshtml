@model IEnumerable<WebService.Models.Produto>

@{

    Layout = "~/Views/Shared/_mainView.cshtml";
}

<!DOCTYPE html>

<html>

<body>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">

                    <div class="box-header">
                        <div class="form-horizontal">
                            <h4 class="box-title">Lista de Produtos</h4>
                            <h3>
                                @Html.ActionLink("Adicionar novo", "Create", "Produto", new { @class = "btn btn-success" })
                            </h3>
                            <div class="box-body">
                                <div class="col-md-offset-8 col-md-10">
                                    @using (Html.BeginForm())
                                    {
                                        <p>
                                            Buscar Produto: @Html.TextBox("descricao")
                                            <input type="submit" value="Pesquisa" />
                                        </p>
                                    }
                                </div>
                                <table id="TabelaUsuarios" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="col-md-2">
                                                @Html.DisplayNameFor(model => model.descricao)
                                            </th>
                                            <th class="col-md-2">
                                                @Html.DisplayNameFor(model => model.quantidade)
                                            </th>
                                            <th class="col-md-2">
                                                @Html.DisplayNameFor(model => model.lote)
                                            </th>
                                            <th class="col-md-2">
                                                @Html.DisplayNameFor(model => model.vencimento)
                                            </th>

                                        </tr>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.descricao)</td>
                                                <td>@Html.DisplayFor(modelItem => item.quantidade)</td>
                                                <td>@Html.DisplayFor(modelItem => item.lote)</td>
                                                <td>@Html.DisplayFor(modelItem => item.vencimento)</td>
                                                <td class="fa-pull-left">
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.id_produto }, new { @class = "btn btn-primary" })
                                                </td>
                                                <td class="fa-pull-left">     @Html.ActionLink("Excluir", "Delete", new { id = item.id_produto }, new { @class = "btn btn-danger" })</td>
                                            </tr>
                                        }
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
